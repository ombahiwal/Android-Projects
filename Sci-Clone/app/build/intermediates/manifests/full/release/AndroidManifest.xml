        <activity android:name="xyz.omilap.sci_clone.splash" />
        <activity
            android:name="xyz.omilap.sci_clone.Events"
            android:label="@string/title_activity_events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="xyz.omilap.sci_clone.Register" />
        <activity
            android:name="xyz.omilap.sci_clone.science"
            android:label="@string/title_activity_science"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="xyz.omilap.sci_clone.RegisterActivity"
            android:label="@string/title_activity_register"
